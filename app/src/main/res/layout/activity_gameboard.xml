<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/player1Cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/player1Card1"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height" />

        <ImageButton
            android:id="@+id/player1Card2"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/board_and_cards_space"></LinearLayout>

    <LinearLayout
        android:id="@+id/gameBoardMiddleSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/gameBoardGrid"
            android:layout_width="@dimen/board_size"
            android:layout_height="@dimen/board_size">

        <ImageButton
            android:id="@+id/A1"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/A2"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/A3"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="0"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/A4"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="0"
            android:layout_column="3"/>

        <ImageButton
            android:id="@+id/A5"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="0"
            android:layout_column="4"/>

        <ImageButton
            android:id="@+id/B1"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/B2"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/B3"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/B4"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="1"
            android:layout_column="3"/>

        <ImageButton
            android:id="@+id/B5"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="1"
            android:layout_column="4"/>

        <ImageButton
            android:id="@+id/C1"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="2"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/C2"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="2"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/C3"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="2"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/C4"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="2"
            android:layout_column="3"/>

        <ImageButton
            android:id="@+id/C5"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="2"
            android:layout_column="4"/>

        <ImageButton
            android:id="@+id/D1"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="3"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/D2"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="3"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/D3"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="3"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/D4"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="3"
            android:layout_column="3"/>

        <ImageButton
            android:id="@+id/D5"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="3"
            android:layout_column="4"/>

        <ImageButton
            android:id="@+id/E1"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="4"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/E2"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="4"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/E3"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="4"
            android:layout_column="2"/>

        <ImageButton
            android:id="@+id/E4"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="4"
            android:layout_column="3"/>

        <ImageButton
            android:id="@+id/E5"
            android:layout_width="@dimen/board_tile_width"
            android:layout_height="@dimen/board_tile_width"
            android:layout_row="4"
            android:layout_column="4"/>

    </GridLayout>

        <LinearLayout
            android:id="@+id/middleSpaceExtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilePicture1"
                android:layout_width="@dimen/profile_picture_size"
                android:layout_height="@dimen/profile_picture_size"
                android:layout_marginLeft="@dimen/profile_picture_margin_left"/>

            <ImageButton
                android:id="@+id/middleCard"
                android:layout_width="@dimen/small_card_width"
                android:layout_height="@dimen/small_card_height"
                android:layout_marginLeft="@dimen/middle_card_margin_left"/>

            <ImageView
                android:id="@+id/profilePicture2"
                android:layout_width="@dimen/profile_picture_size"
                android:layout_height="@dimen/profile_picture_size"
                android:layout_marginLeft="@dimen/profile_picture_margin_left"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/board_and_cards_space"></LinearLayout>

    <LinearLayout
        android:id="@+id/player2Cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/player2Card1"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height" />

        <ImageButton
            android:id="@+id/player2Card2"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height" />

    </LinearLayout>
</LinearLayout>